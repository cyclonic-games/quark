{
    "compilerOptions": {
        "baseUrl": ".",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "DOM",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "paths": {
            "*": [ "*" ]
        },
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "**/*"
    ]
}
