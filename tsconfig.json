{
    "compilerOptions": {
        "baseUrl": ".",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "Quark.Node.jsxFactory",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "esnext"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "paths": {
            "*": [ "*" ]
        },
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "include": [
        "**/*"
    ]
}
